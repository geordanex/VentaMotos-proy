<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="proyVentas_Motos">
	<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
		<class>proyVentas_Motos.beans.Categoria</class>
		<class>proyVentas_Motos.beans.Cliente</class>
		<class>proyVentas_Motos.beans.Comentario</class>
		<class>proyVentas_Motos.beans.DetalleVenta</class>
		<class>proyVentas_Motos.beans.Empleado</class>
		<class>proyVentas_Motos.beans.Producto</class>
		<class>proyVentas_Motos.beans.Proveedor</class>
		<class>proyVentas_Motos.beans.Usuario</class>
		<class>proyVentas_Motos.beans.Venta</class>
		
	<properties>
		<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/bd_motos"/>
		<property name="javax.persistence.jdbc.password" value="mysql"/>
		<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
		<property name="javax.persistence.jdbc.user" value="root"/>
		<property name="hibernate.cache.provider_class" value="org.hibernate.cache.NoCacheProvider"/>
	</properties>
	</persistence-unit>
</persistence>
